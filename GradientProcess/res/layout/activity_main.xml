<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:process="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.wxp.gradientprocess.ProcessIndication
        android:layout_width="match_parent"
        android:layout_height="40dp"
        process:process_index="5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e00032" />

    <com.wxp.gradientprocess.ProcessIndication
        android:layout_width="match_parent"
        android:layout_height="40dp"
        process:process_index="3"
        process:shader_end_color="#D10000"
        process:shader_start_color="#FFBDBD" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e00032" />

    <com.wxp.gradientprocess.ProcessIndication
        android:layout_width="match_parent"
        android:layout_height="40dp"
        process:process_index="1"
        process:shader_end_color="#D10000"
        process:shader_start_color="#0099B4" />

</LinearLayout>